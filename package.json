{
  "babel": {
    "presets": ["es2015"] 
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel server -d build",
    "build:client": "cd client && npm run build && cd ..",
    "start": "npm run start:server & npm run start:client",
    "start:server": "nodemon --exec babel-node server/index.js",
    "start:client": "cd client && npm start",
    "start:production": "forever build/index.js",
    "test": "mocha --compilers js:babel-register server/__tests__"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "jsonwebtoken": "^7.1.6",
    "lodash": "^4.15.0",
    "mail-notifier": "^0.3.0",
    "mailstrip": "0.0.9",
    "mongoose": "^4.5.7",
    "nodemailer": "^2.5.0",
    "validator": "^5.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "eslint": "^3.3.1",
    "eslint-config-airbnb-base": "^5.0.2",
    "eslint-plugin-import": "^1.13.0",
    "mocha": "^3.0.2",
    "mockgoose": "^6.0.6",
    "nodemon": "^1.10.2",
    "sinon": "^1.17.5",
    "supertest": "^2.0.0"
  }
}
