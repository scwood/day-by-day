{
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel server -d build",
    "build:client": "cd client && npm run build && cd ..",
    "start": "npm run start:server & npm run start:client",
    "start:server": "nodemon --exec babel-node server/src/index.js",
    "start:client": "cd client && npm start",
    "start:production": "forever build/src/index.js",
    "test": "mocha --compilers js:babel-register server/tests"
  },
  "dependencies": {
    "babel-runtime": "^6.20.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "forever": "^0.15.2",
    "jsonwebtoken": "^7.1.6",
    "lodash": "^4.15.0",
    "mail-notifier": "^0.3.0",
    "mailstrip": "0.0.9",
    "mongoose": "^4.5.7",
    "nodemailer": "^2.7.0",
    "validator": "^5.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.11.6",
    "mocha": "^3.0.2",
    "mockgoose": "^6.0.6",
    "nodemon": "^1.10.2",
    "sinon": "^1.17.5",
    "supertest": "^2.0.0"
  }
}
